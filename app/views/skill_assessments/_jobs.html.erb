<div class="ui container">
    <% @jobs.each do |listing| %>
        <h3><%= listing.title %></h3>
        <h5>At <%= listing.company_name %></h5>
        <% if listing.company_logo && (listing.company_logo.gsub("https://d2fcz5no062gar.cloudfront.net","").include?("http://") || listing.company_logo.gsub("https://d2fcz5no062gar.cloudfront.net","").include?("https://"))%><img src="<%= listing.company_logo.gsub("https://d2fcz5no062gar.cloudfront.net","") %>"><% end %>
        <p>Perks: <% if listing.perks && !listing.perks.empty? %><%= listing.perks %><% else %>No perks listed <% end %></p>
        <p>Category: <%= listing['category']['name'] %></p>
        <p>Company: <%= listing['company']['name'] %></p>
        <% if listing['company']['location'] %><p>Location: <%= listing['company']['location']['name'] %></p><% end %>
        <p><a href="<%= listing['url'] %>">Job Link</a></p>
        
        <%= listing['description'].html_safe %><br>
        
        <br><br><br><br>
    <% end %>
</div>