      <ul>
      <% prerequisite.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :course_id %>
    <select name="prerequisite[course_id]" class="course_select"></select>
  </div>

  <div class="field">
    <%= form.label :prerequisite_id %>
    <select name="prerequisite[prerequisite_id]" class="prerequisite_select"></select>
