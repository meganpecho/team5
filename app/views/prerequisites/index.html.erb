<p id="notice"><%= notice %></p>

<h1>Prerequisites</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Prerequisite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prerequisites.each do |prerequisite| %>
      <tr>
        <td>[<%= prerequisite.course.subject %> <%= prerequisite.course.course_num %>] <%= prerequisite.course.title %></td>
        <td>[<%= prerequisite.prerequisite.subject %> <%= prerequisite.prerequisite.course_num %>] <%= prerequisite.prerequisite.title %></td>
        <td><%= link_to 'Show', prerequisite %></td>
        <td><%= link_to 'Edit', edit_prerequisite_path(prerequisite) %></td>
        <td><%= link_to 'Destroy', prerequisite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prerequisite', new_prerequisite_path %>
